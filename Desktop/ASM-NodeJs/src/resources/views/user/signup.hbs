<!--Sign-Up-->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 mt-3 mb-5 mt-0 border border-1 p-5 rounded">
            <form action="/user/createuser" method="POST">
                <h1 class="mb-3">Sign Up</h1>
                <div class="form-group">
                    <label class="form-label">Username</label>
                    <input name="userName" class="form-control" type="text">
                </div>
                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input name="email" class="form-control" type="email">
                </div>
                <div class="form-group">
                    <label class="form-label">Password</label>
                    <input name="password" class="form-control" type="password">
                </div>
                {{!-- <div class="form-group">
                    <label class="form-label">Re-Password</label>
                    <input name="rePassword" class="form-control" type="password">
                </div> --}}
                <div class="form-group">
                    <button type="submit" class="btn btn-success btnadd mb-4 mt-2">Sign-up</button>
                    <div class="grBtn">
                        <label class="mr-4">If you have a Account</label>
                        <a href="/user/login" class="btn btn-primary btnadd">Log-in</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>